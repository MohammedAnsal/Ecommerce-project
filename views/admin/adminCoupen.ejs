              <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span>
            </div>
          </footer> -->
          <!-- partial -->

        </div>

    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>

  //  AddCoupenSweetAlert :-

  const msg = document.getElementById('msg');

  if(msg.textContent.trim() == 'good'){

    Swal.fire({

      title: "Coupen Added",
      text: "Coupen Added Successfully",
      icon: "success"

    });

  }

  //  CoupenAction :-

  const btn = document.getElementById('action');

  function action(id){

    fetch(`/admin/copenAction?id=${id}` , {method : 'put'})

    if (btn.textContent.trim() === 'De-Active') {

        btn.textContent = 'Active'; 
        btn.classList.remove('btn-outline-danger');
        btn.classList.add('btn-outline-success');

      } else {

        btn.textContent = 'De-Active'; 
        btn.classList.remove('btn-outline-success');
        btn.classList.add('btn-outline-danger');
      }

  }

  //  CoupenDelete :-

  function deletCoupen(id){ 

    console.log(id);

    fetch(`/admin/deletCoupen?id=${id}` , {method : 'put'})

    .then(res => res.json())

    .then(data => {

      if(data.succ){

        Swal.fire({

        position: "top-end",
        icon: "success",
        title: "Coupen Removed Successfully",
        showConfirmButton: false,
        timer: 1500

      });

        $('#reloadDiv').load('/admin/adminCoupen #reloadDiv');

      }

    })
  }

</script>

