<%- include('../layouts/adminHeader.ejs') %>

  <div class="container-scroller">

    <%- include('../layouts/adminSidebar.ejs') %>

    <div class="container-fluid page-body-wrapper">

        <%- include('../layouts/adminNavbar.ejs') %>

      <!-- partial -->

        <div class="main-panel">

          <div class="content-wrapper" id="reloadDiv">
            
              <!-- Button trigger modal -->
              
              <button type="button" class="btn btn-outline-primary " data-bs-toggle="modal" data-bs-target="#couponModal">

                Add Coupon

              </button>

                    <!-- Modal -->

                    <div class="modal fade" id="couponModal" tabindex="-1" aria-labelledby="couponModalLabel" aria-hidden="true">

                      <div class="modal-dialog modal-dialog-centered">

                        <div class="modal-content">

                          <div class="modal-header">
                            <h5 class="modal-title" id="couponModalLabel">Add Coupon</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">x</button>
                          </div>

                          <div class="modal-body">

                            <form action="/admin/addCoupen" id="couponForm" method="post" enctype="multipart/form-data">

                              <p id="msg" hidden><%= msgg %></p>

                              <div class="mb-3">
                                <label for="couponName" class="form-label">Name</label>
                                <input type="text" class="form-control" id="couponName" name="coupon" placeholder="Enter coupon name">
                              </div>

                              <div class="mb-3">
                                <label for="couponImage" class="form-label">Image</label>
                                <input type="file" class="form-control" id="couponImage" name="image" accept="image/*">
                              </div>

                              <!-- <div class="mb-3">
                                <label for="couponCode" class="form-label">Coupon Code</label>
                                <input type="text" class="form-control" id="couponCode" name="code" placeholder="Enter coupon code">
                              </div> -->

                              <div class="mb-3 d-flex ">
                                <div>
                                    <label for="couponCode" class="form-label">Min</label>
                                  <input type="number" class="form-control w-50" min="1" name="min"  id="" placeholder="min">
                                </div>

                                <div class="ms-3">
                                  <label for="couponCode" class="form-label">Max</label>
                                  <input type="number" class="form-control w-50 ms-3" min="1" name="max"  id="" placeholder="max">
                                </div>

                              </div>
                              
                              <div class="mb-3">
                                <label for="toDate" class="form-label">Discount</label>
                                <input type="number" class="form-control" name="discount" min="1" id="toDate">
                              </div>

                              <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary " data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-outline-success " id="submitBtn">Add Coupon</button>
                              </div>

                            </form>

                          </div>

                        </div>

                      </div>
                      
                    </div>

                    <!--modal end-->

                    <br><br>

                  <div class="row">

                    <% coupenData.forEach(val => { %>

                        
                        <div class="flip-card col-lg-3" >
                          
                          <div class="flip-card-inner">
                            
                              <div class="flip-card-front" style="background: url('/productImage/<%= val.image %>'); background-size: cover;">

                                <p class="title text-white" style="padding-bottom: 13rem;"><%= val.name %></p>
                                
                              </div>
                              
                              <div class="flip-card-back">

                                <p class="title text-white pb-3 "><%= val.name %></p>
                                <h6 class="text-dark" style="font-weight: bold;"><%= val.discount %>% OFF</h6>
                                <p class="text-dark">Coupon Code : <%= val.coupenId %></p>

                                <div style="text-align: center;">

                                  <button id="action" class="btn btn-outline-danger" onclick="action('<%= val._id %>')"><%= val.status == true ? 'De-Active' : 'Active' %></button>
                                  <button id="remove" class="btn btn-outline-danger" style="width: 100px;" onclick="deletCoupen('<%= val._id %>')">Remove</button>
                                  
                                </div>

                              </div>

                            </div>
                            
                          </div>
                          
                      <%  }); %>

                   </div>

          </div>

