<body>

<style>
    body{margin-top:20px;
    background-color:#eee;
    
}

.card {
    box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: 1rem;
}
p{
    color: #000;
    font-size: 15px;
    font-weight: 500;
}
h5{
    font-size: 15px;
}

</style>

    <div class="container">
        <div class="row">
                <div class="col-lg-12">
                    <div class="card">  
                        <div class="card-body">
                            <div class="invoice-title">
                                <h5 class="float-end font-size-15">Invoice <span class="badge bg-success font-size-12 ms-2">Paid</span></h5>
                                <div class="mb-4">
                                   <h2 class="tit"  style="font-size: 30px; color: #000;">Urban Online Shop</h2>
                                </div>
                                <div class="text-muted">
                                    <p class="mb-1">Calicut Kerala India</p>
                                    <p class="mb-1"><i class="uil uil-envelope-alt me-1"></i> www.urbanonlineshop.com</p>
                                    <p><i class="uil uil-phone me-1"></i>1515-1515</p>
                                </div>
                            </div>
        
                            <hr class="my-4">
        
                            <div class="row">
								
                                <div class="col-sm-6">

                                    <div class="text-muted">

                                        <h5 class="font-size-16 mb-3">Billed To:</h5>

                                        <!-- Display user's billing information -->

                                        <p class="font-size-15 mb-2"> <%= ordData.deliveryAddress.name %></p>

                                            <p class="box-content">

                                               <%= ordData.deliveryAddress.address %> - <%= ordData.deliveryAddress.pincode %> <br>
                                               <%= ordData.deliveryAddress.locality %><br>  <%= ordData.deliveryAddress.city %> , <%= ordData.deliveryAddress.state %> <br>
                                               <%= ordData.deliveryAddress.phone %>

                                            </p>
                                    </div>

                                </div>
                                
                                <!-- end col -->

                                <div class="col-sm-6">

                                    <div class="text-muted text-sm-end">

                                        <div>
                                            <h5 class="font-size-15 mb-1">Invoice No:</h5>
                                            <p>#DZ0112</p>
                                        </div>

                                        <div class="mt-4">
                                            <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                            <p><%= ordData.orderDate.toString().split(' ').slice(0,4).join(' ') %></p>
                                        </div>

                                        <div class="mt-4">
                                            <h5 class="font-size-15 mb-1">Order No:</h5>
                                            <p>#<%= ordData._id %></p>
                                        </div>

                                    </div>

                                </div>

                                <!-- end col -->

                            </div>

                            <!-- end row -->
                            
                            <div class="py-2">

                                <h5 class="font-size-15">Order Summary</h5>
        
                                <div class="table-responsive">

                                    <table class="table align-middle table-nowrap table-centered mb-0">

                                        <thead>

                                            <tr>
                                                <th style="width: 70px; color: black;">No.</th>
                                                <th style="color: black;">Item</th>
                                                <th style="color: black;">Price</th>
                                                <th style="color: black;">Quantity</th>
                                                <th class="text-end" style="width: 120px; color: black;">Total</th>
                                            </tr>

                                        </thead>

                                        <tbody>

                                            <% ordData.products.forEach((product, indx) => { %>

                                                <tr>

                                                    <td><%= indx + 1 %></td>

                                                    <td>
                                                        <div>
                                                            <h5 style="font-size: 15px; font-weight: bold;" class="text-truncate font-size-14 mb-1"><%= product.productId.name %></h5>
                                                        </div>
                                                    </td>

                                                    <!-- Display product price, quantity, and total -->
                                                    <td style="font-size: 15px; font-weight: bold;">$<%= product.productId.price%></td>
                                                    <td style="font-size: 15px; font-weight: bold;"><%= product.quantity %></td>
                                                    <td style="font-size: 15px; font-weight: bold;" class="text-end">$ <%= product.productId.price * product.quantity %></td>
                                                </tr>											

												<!-- <tr>
													<th  style="font-size: 15px; font-weight: 400; color: #000;" scope="row" colspan="4" class="border-0 text-end">
														Discount :</th>
													<td style="font-size: 15px; font-weight: 400;" class="border-0 text-end">$<%= product.productId.discount_price %></td>
												</tr> -->

												<!-- <tr>
													<th  style="font-size: 15px; font-weight: 400; color: #000;" scope="row" colspan="4" class="border-0 text-end">
														Shipping Charge :</th>
													<td  style="font-size: 15px; font-weight: 400;" class="border-0 text-end">$00.00</td>
												</tr>

												<tr>
													<th  style="font-size: 15px; font-weight: 400; color: #000;" scope="row" colspan="4" class="border-0 text-end">
														Tax:</th>
													<td  style="font-size: 15px; font-weight: 400;" class="border-0 text-end">$00.00</td>
												</tr> -->

                                                
                                                <% }) %>
                                                
                                                <tr>
                                                    <th  style="font-size: 15px; font-weight: 400; color: #000;"  scope="row" colspan="4" class="text-end">Sub Total</th>
													<td  style="font-size: 15px; font-weight: 400;" class="text-end">$<%= ordData.orderAmount %></td>
												</tr>
                                                <tr>
                                                    <th  style="font-size: 15px; font-weight: 400; color: #000;" scope="row" colspan="4" class="border-0 text-end">Total</th>
                                                    <td  style="font-size: 15px; font-weight: 400;" class="border-0 text-end"><h4  style="font-size: 15px; font-weight: bold;" class="m-0 fw-semibold">$<%= ordData.orderAmount %></h4></td>
                                                </tr>

                                        </tbody><!-- end tbody -->

                                    </table><!-- end table -->

                                </div><!-- end table responsive -->

                                <div class="d-print-none mt-4">

                                    <div class="float-end">

                                        <a href="javascript:window.print()" class="btn btn-success me-1"><i class="fa fa-print"></i></a>
                                        <!-- <a href="#" class="btn btn-primary w-md">Send</a> -->
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>